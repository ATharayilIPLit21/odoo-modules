<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_payment_document">
	 <div class="page">
        <div id="printBill">
            <div style="margin-top: 10px">
                <div style="width: 45%; float: left">
                    <div t-if="res_company.name"><t t-esc="res_company.name"/></div>
                    <div t-if="res_company.city"><t t-esc="res_company.city"/></div>
                    <div t-if="res_company.zip">PIN: <t t-esc="res_company.zip"/></div>
                    <div t-if="res_company.phone">Phone: <t t-esc="res_company.phone"/></div>
                </div>
                <div style="width: 10%; float: left">
                    <img width="100%" t-att-src='"data:image/jpeg;base64, " + res_company.logo'/>
                </div>
                <div style="width: 45%; float: right; text-align: right" t-if="res_company.vat">
                    <div><t t-esc="res_company.vat"/></div>
                </div>
            </div>

            <div id="receipt_heading">R E C E I P T</div>

            <div style="margin-top: 10px;">
                <div style="width: 50%; float: left">
                    <div>Name: <t t-esc="doc.partner_id.name"/></div>
                    <div>ID: <t t-esc="doc.partner_id.ref"/></div>
                    <div>Provider Name: </div>
                </div>
                <div style="width: 50%; float: right; text-align: right">
                    <div>Date: <t t-esc="doc.payment_date"/></div>
                    <div>Bill Number: <t t-esc="doc.name"/></div>
                </div>
            </div>

            <div style="clear:both; padding-top: 10px;"></div>

            <table id="lineItems" class="bottom-border">
                <thead>
                    <tr>
                        <th style="text-align:left;width:50%">Product</th>
                        <th style="text-align:right">Expiry Date</th>
                        <th style="text-align:right">Quantity</th>
                        <th style="text-align:right">Unit Price</th>
                        <th style="text-align:right">SubTotal</th>
                    </tr>
                </thead>
                <tbody>
                	<t t-set="invoice_line_items" t-value="[]"/>
                	<t t-foreach="doc.invoice_ids" t-as="invoice">
                		<t t-foreach="invoice.invoice_line_ids" t-as="line">
                			<t t-set="invoice_line_items" t-value="invoice_line_items.append(line)"/>
                		</t>
                	</t>
                	kkkkkkkkk
                	<t t-esc="invoice_line_items"/>
                    <tr t-foreach="invoice_line_items" t-as="invoice_line_item">
                    	
                        <td><t t-esc="invoice_line_item.product_id.name"/></td>
                        <td class="right"><t t-esc="invoice_line_item.expiry_date"/></td>
                        <td class="right"><t t-esc="invoice_line_item.quantity"/></td>
                        <td class="right"><t t-esc="invoice_line_item.unit_price"/></td>
                        <td class="right"><t t-esc="invoice_line_item.price_subtotal"/></td>
                    </tr>
                </tbody>
            </table>
            <div>
                <div style="width: 40%; float: left; padding-top: 20px">
                    <div t-if="cashier_initials" id="cashier-initials"><t t-esc="cashier_initials"/></div>
                    <div id="message-bill">This is a computer generated receipt and does not require a signature.</div>
                    <div class="small">Bill Created:<t t-esc="doc.create_date"/></div>
                    <div class="small">Bill Confirmed:<t t-esc="doc.write_date"/></div>
                </div>

                <div style="width:40%;float:right">
                    <table class="bottom-border" style="width:100%">
                        <tr>
                            <td class="totalLabel">Tax</td>
                            <td class="totalValue"></td>
                        </tr>
                        <tr>
                            <td class="totalLabel">Discount</td>
                            <td class="totalValue"></td>
                        </tr>
                    </table>
                    <table class="bottom-border" style="width:100%">
                        <tr>
                            <td class="totalLabel">Previous Balance</td>
                            <td class="totalValue"><t t-esc="doc.balance_before_pay"/></td>
                        </tr>
                    </table>
                    <table class="bottom-border" style="width:100%">
                        <tr>
                            <td class="totalLabel">Bill Amount</td>
                            <td class="totalValue"></td>
                        </tr>
                        <tr>
                            <td class="totalLabel">Paid Amount</td>
                            <td class="totalValue"><t t-esc="doc.amount"/></td>
                        </tr>
                    </table>
                    <table style="width:100%">
                        <tr>
                            <td class="totalLabel">Outstanding Balance</td>
                            <td class="totalValue"></td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
	</div>
</template>


<template id="report_account_payment_template">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="bahmni_account.report_payment_document" t-lang="doc.partner_id.lang"/>
        </t>
    </t>
</template>
</odoo>
